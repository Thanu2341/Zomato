pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs'
    }
    stages {
        stage ("clean workspace") {
            steps {
                deleteDir()
            }
        }
        stage ("Git Checkout") {
            steps {
                git 'https://github.com/Thanu2341/Zomato.git'
            }
        }
        stage("Install NPM Dependencies") {
            steps {
                sh "npm install"
            }
        }
        stage ("Build Docker Image") {
            steps {
                sh "docker build -t thanu5/zomatoapp:1.0"
            }
        }
    }
}
