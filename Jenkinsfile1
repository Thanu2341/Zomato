pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs'
    }
    stages {
        stage ("clean workspace") {
            steps {
                deleteDir()
            }
        }
        stage ("Git Checkout") {
            steps {
                git 'https://github.com/Thanu2341/Zomato.git'
            }
        }
        stage ("Build Docker Image") {
            steps {
                sh "docker build -t thanu5/zomatoapp:1.0 ."
            }
        }
        stage ("Tag & Push to DockerHub") {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-login', passwordVariable: 'dockerhubpass', usernameVariable: 'dockerhublogin')]) {
                        sh 'docker login -u ${dockerhublogin} -p ${dockerhubpass}'
                        sh "docker push thanu5/zomatoapp:1.0"
                    }
                }
            }
        }
        stage('Terraform Deploy') {
    steps {
        withCredentials([file(credentialsId: 'thetfkey', variable: 'TF_KEY')]) {
            dir('terraformfiles') {
                sh '''
                    cp "$TF_KEY" thetfkey.pem
                    chmod 600 thetfkey.pem

                    terraform init
                    terraform validate
                    terraform plan -out=tfplan
                    terraform apply -auto-approve tfplan
                '''
            }
        }
    }
}
}
}
