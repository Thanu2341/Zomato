pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs'
    }
    stages {
        stage ("clean workspace") {
            steps {
                deleteDir()
            }
        }
        stage ("Git Checkout") {
            steps {
                git 'https://github.com/Thanu2341/Zomato.git'
            }
        }
        stage ("Build Docker Image") {
            steps {
                sh "docker build -t thanu5/zomatoapp:1.0 ."
            }
        }
        stage ("Tag & Push to DockerHub") {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-login', passwordVariable: 'dockerhubpass', usernameVariable: 'dockerhublogin')]) {
                        sh 'docker login -u ${dockerhublogin} -p ${dockerhubpass}'
                        sh "docker push thanu5/zomatoapp:1.0"
                    }
                }
            }
        }
        stage('config & Deployment') {
            steps {
                withCredentials([aws(accessKeyVariable: 'AWS_ACCESS_KEY_ID', credentialsId: 'awslogin', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                dir('terraformfiles') {
                sh 'chmod 600 thetfkey.pem'
                sh 'terraform init'
                sh 'terraform validate'
                sh 'terraform apply --autp-approve'
                }
        }
    }
}
}
}
